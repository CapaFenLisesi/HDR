	author = {Stevens, J.E. and Bell, R.E. and Bernabei, S. and Cavallo, A. and Chu, T.K. and Colestock, P.L. and Hooke, W. and Hosea, J. and Jobes, F. and Luce, T. and Mazzucato, E. and Motley, R. and Pinsker, R. and Von Goeler, S. and Wilson, J.R.},
