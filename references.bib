	author = {Ridolfini, V. Pericoli and Bibet, Ph and Mirizzi, F and Apicella, M.L and Barbato, E and Buratti, P and Calabrò, G and Cardinali, A and Granucci, G and Panaccione, L and Podda, S and Sozzi, C and Tuccillo, A.A},
