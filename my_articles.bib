@article{preynas2011,
  title = {Coupling Characteristics of the {{ITER}}-Relevant Lower Hybrid Antenna in {{Tore Supra}}: Experiments and Modelling},
  shorttitle = {Coupling Characteristics of the {{ITER}}-Relevant Lower Hybrid Antenna in {{Tore Supra}}},
  author = {Preynas, M. and Ekedahl, A. and Fedorczak, N. and Goniche, M. and Guilhem, D. and Gunn, J.P. and Hillairet, J. and Litaudon, X. and Achard, J. and {Berger-By}, G. and Belo, J. and Corbel, E. and Delpech, L. and Ohsako, T. and Prou, M.},
