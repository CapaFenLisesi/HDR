@inproceedings{fil2018,
  title = {Experimental Studies of Electron Emission Properties under Magnetic Field for Copper Samples: Effect of the Surface Morphology},
  shorttitle = {Experimental Studies of Electron Emission Properties under Magnetic Field for Copper Samples},
  booktitle = {45th {{EPS Conference}} on {{Plasma Physics}}},
